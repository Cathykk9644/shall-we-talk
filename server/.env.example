# Server environment variables (copy to server/.env for local dev)
NODE_ENV=development
PORT=5001
CLIENT_URL=http://localhost:5173
MONGO_URI=mongodb://mongo:27017/shallwetalk
JWT_SECRET=change_me

# Cloudinary (optional for uploads)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Stream (Video/Chat)
