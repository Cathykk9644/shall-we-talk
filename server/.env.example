# Server environment variables (copy to server/.env for local dev)
NODE_ENV=development
PORT=5001
CLIENT_URL=http://localhost:5173
MONGO_URI=mongodb://mongo:27017/shallwetalk
JWT_SECRET=change_me

# Cloudinary (optional for uploads)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Stream (Video/Chat)
STREAM_API_KEY=
STREAM_API_SECRET=

# AI (optional): Smart Replies & Icebreakers
# Prefer Gemini 1.5 Flash by setting AI_PROVIDER=gemini and a Google API key
AI_PROVIDER=gemini
GEMINI_MODEL=gemini-1.5-flash
GEMINI_API_KEY=
# Alternatively, you can use GOOGLE_API_KEY for Gemini
GOOGLE_API_KEY=

# Or use Groq (OpenAI-compatible) as provider/fallback
GROQ_API_KEY=
# Optional comma-separated list; first working model is used
GROQ_MODELS=llama-3.1-8b-instant,llama-3.1-70b-versatile
